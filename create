#!/bin/bash

array=( $@ )
len=${#array[@]}
_first=$1
_last=${array[$len-1]}
_rest=${array[@]:1:$len-2}
_filename=$( printf "%s-%s" "$(date +%F)" "$_first" )
_postname=$( printf "%s %s" "$_first" "$_rest" )

echo $_rest

for var in $_rest 
do
    _filename+="-"
    _filename+=$var
done

cat <<EOF > _posts/$_filename.md
---
layout: post
title: $_postname
comments: true
date:   $(date +%F_%T) 
categories: $_last
tags: ['']
image:
description:
header:
header-caption:
---


<!--more-->


# Contents
{:.no_toc}
* TOC
{:toc}

# Meta

This post took:

* XX hours to do
* YY hours to do
EOF

if [[ "$OSTYPE" == "darwin"* ]]; then
    open _posts/$_filename.md 
elif [[ "$OSTYPE" == "msys" ]]; then
    start _posts/$_filename.md 
fi
